sudo apt-get update
sudo apt-get install -y apt-transport-https aspnetcore-runtime-7.0
cd /tmp/
sudo wget https://github.com/nopSolutions/nopCommerce/releases/download/release-4.60.6/nopCommerce_4.60.6_NoSource_linux_x64.zip
sudo mv nopCommerce_4.60.6_NoSource_linux_x64.zip /nop/
name: to check nop file in nop dir
            cd /nop/
            ls
sudo apt-get install unzip -y
sudo unzip nopCommerce_4.60.6_NoSource_linux_x64.zip
sudo mkdir bin
sudo mkdir logs
name: create a file and write the content in it 
    sudo vi /etc/systemd/system/nopCommerce.service
    content: nopcontent